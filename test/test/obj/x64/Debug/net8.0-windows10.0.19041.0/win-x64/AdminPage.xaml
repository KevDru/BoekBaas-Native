<Page
    x:Class="test.AdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:test"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <ScrollViewer>
        <StackPanel>
            <!-- Book Management Header -->
            <TextBlock Text="Book Management" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Book List Section -->
            <ListView x:ConnectionId='2' x:Name="BookList" Height="200"                                             >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="5" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" BorderBrush="Gray" BorderThickness="1" Padding="10">
                            <TextBlock FontWeight="Bold" FontSize="16">
                                <Run Text="Title: "/>
                                <Run Text="{Binding Title}"/>
                            </TextBlock>
                            <TextBlock FontStyle="Italic" FontSize="14" Margin="0,5">
                                <Run Text="Author: "/>
                                <Run Text="{Binding Author}"/>
                            </TextBlock>
                            <TextBlock FontSize="14">
                                <Run Text="Release Year: "/>
                                <Run Text="{Binding publication_year}"/>
                            </TextBlock>
                            <TextBlock FontSize="14">
                                <Run Text="Genre: "/>
                                <Run Text="{Binding Genre.Name}"/>
                            </TextBlock>
                                <TextBlock FontSize="14">
                                <Run Text="ISBN: "/>
                                <Run Text="{Binding ISBN}"/>
                                </TextBlock>
                            </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Book Fields -->
            <TextBox x:ConnectionId='3' x:Name="TitleInput" PlaceholderText="Title" Margin="0,5"/>
            <TextBox x:ConnectionId='4' x:Name="AuthorInput" PlaceholderText="Author" Margin="0,5"/>
            <TextBox x:ConnectionId='5' x:Name="YearInput" PlaceholderText="Year Published" Margin="0,5"/>

            <!-- Genre Selection -->
            <ComboBox x:ConnectionId='6' x:Name="GenreComboBox" Margin="0,5" PlaceholderText="Select Genre">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- ISBN Field -->
            <TextBox x:ConnectionId='7' x:Name="ISBNInput" PlaceholderText="ISBN" Margin="0,5"/>

            <!-- CRUD Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button x:ConnectionId='10' Content="Add Book"                      />
                <Button x:ConnectionId='11' Content="Update Book"                         />
                <Button x:ConnectionId='12' Content="Delete Book"                         />
            </StackPanel>

            <!-- Genre Management Section -->
            <TextBlock Text="Manage Genres" FontSize="20" FontWeight="Bold" Margin="0,20,0,10"/>

            <!-- Genre Name Field -->
            <TextBox x:ConnectionId='8' x:Name="GenreNameInput" PlaceholderText="Genre Name" Margin="0,5"/>

            <!-- Add Genre Button -->
            <Button x:ConnectionId='9' Content="Add Genre"                        Margin="0,5"/>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

