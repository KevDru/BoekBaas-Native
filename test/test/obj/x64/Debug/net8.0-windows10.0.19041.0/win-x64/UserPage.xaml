<Page
    x:Class="test.UserPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:test"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <StackPanel>
            <!-- Book List Section Header -->
            <TextBlock Text="Book Overview" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- Book List -->
            <ListView x:ConnectionId='2' x:Name="BookList" Height="300" Margin="0,10"                                             >

                <ListView.ItemTemplate>
                    <DataTemplate>
                   
                            
                            <StackPanel Orientation="Vertical" Margin="5" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" BorderBrush="Gray" BorderThickness="1" Padding="10">
                            <TextBlock FontWeight="Bold" FontSize="16">
                     <Run Text="Title: "/>
                     <Run Text="{Binding Title}"/>
                            </TextBlock>
                            <TextBlock FontStyle="Italic" FontSize="14" Margin="0,5">
                    <Run Text="Author: "/>
                    <Run Text="{Binding Author}"/>
                            </TextBlock>
                            <TextBlock FontSize="14">
                     <Run Text="Release Year: "/>
                     <Run Text="{Binding publication_year}"/>
                            </TextBlock>
                            <TextBlock FontSize="14">
                                <Run Text="Genre"/>
                                 <Run Text="{Binding Genre.id}"/>
                            </TextBlock>
                            <TextBlock FontSize="14">
                                <Run Text="ISBN"/>
                                <Run Text="{Binding ISBN}"/>
                            </TextBlock>
                            <Button x:ConnectionId='4' Content="Borrow" FontSize="20" HorizontalAlignment="Right"                     />    
                        </StackPanel>
                       
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>

